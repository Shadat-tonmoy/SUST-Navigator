<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shadattonmoy.sustnavigator.cgpa.view.CGPAShowFragment">

    <TextView
        android:id="@+id/final_cgpa_view"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/round_light_green"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="48sp"
        android:text="3.75" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/final_cgpa_view"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textSize="24sp"
        android:text="Your CGPA is " />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:padding="20dp"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cgpa_view_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Back" />

        <TextView
            android:id="@+id/cgpa_view_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Save" />
    </LinearLayout>

</RelativeLayout>
