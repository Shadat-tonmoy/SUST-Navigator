<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shadattonmoy.sustnavigator.admin.view.CourseEditFragment">


    <TextView
        android:id="@+id/edit_header"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/round_black"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Edit\nCSE143" />

    <TextView
        android:id="@+id/textView12"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/edit_header"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="Course Code" />

    <EditText
        android:id="@+id/course_code_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:ems="15"
        android:inputType="textCapCharacters"
        android:text="CSE143" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_code_edit"
        android:layout_alignStart="@+id/course_code_edit"
        android:layout_below="@+id/course_code_edit"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Course Title" />

    <EditText
        android:id="@+id/course_title_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:ems="15"
        android:inputType="textCapWords"
        android:text="Structured Programming Language Lab" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/course_title_edit"
        android:layout_alignStart="@+id/course_title_edit"
        android:layout_below="@+id/course_title_edit"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:text="Course Credit" />

    <EditText
        android:id="@+id/course_credit_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:ems="15"
        android:inputType="numberDecimal"
        android:text="3.00" />

        <Button
            android:id="@+id/course_edit_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/course_credit_edit"
            android:layout_alignStart="@+id/course_credit_edit"
            android:layout_below="@+id/course_credit_edit"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#2ecc71"
            android:text="Update" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/course_edit_update"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/textView15"
            android:layout_toRightOf="@+id/textView15"
            android:textColor="#ffffff"
            android:background="#e74c3c"
            android:text="Back" />


    </RelativeLayout>
</ScrollView>