<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shadattonmoy.navigationdrawer.DeptFragment">

    <TextView
        android:id="@+id/deptTitle"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:text="Computer Science and Engineering" />

    <ListView
        android:id="@+id/courseList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/deptTitle"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/deptTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"

        android:background="@drawable/rectangle"
        android:layout_alignRight="@+id/deptTitle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/cgpa_reset_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Reset" />

        <TextView
            android:id="@+id/cgpa_load_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Load" />

        <TextView
            android:id="@+id/cgpa_calculate_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:text="Calculate" />
    </LinearLayout>


</RelativeLayout>