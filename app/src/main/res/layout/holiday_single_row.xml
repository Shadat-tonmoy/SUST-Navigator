<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/holiday_date"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="10\nJan"
        android:gravity="center"
        android:background="@drawable/round_light_green"
        android:textSize="14sp"
        android:textColor="#ffffff"
        />

    <TextView
        android:id="@+id/holiday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/holiday_date"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/holiday_date"
        android:layout_toRightOf="@+id/holiday_date"
        android:text="Shahid Dibash (Language Martyrs' Day)"
        android:textColor="#000000"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/holiday_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holiday_name"
        android:layout_alignStart="@+id/holiday_name"
        android:layout_below="@+id/holiday_name"
        android:text="10 Jan (Sun) - 25 Jan (Thu)"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/holiday_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holiday_desc"
        android:layout_alignStart="@+id/holiday_desc"
        android:layout_below="@+id/holiday_desc"
        android:text="15 Days"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/holiday_edit_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/holiday_desc"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:srcCompat="@drawable/edit_icon" />
</RelativeLayout>