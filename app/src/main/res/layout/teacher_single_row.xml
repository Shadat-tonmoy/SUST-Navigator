<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/teacher_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_light_green"
        android:text="M"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/teacher_icon"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/teacher_icon"
        android:layout_toRightOf="@+id/teacher_icon"
        android:text="Muhammed Zafar Iqbal"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/teacher_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_name"
        android:layout_alignStart="@+id/teacher_name"
        android:layout_below="@+id/teacher_name"
        android:text="Professor"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/teacher_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/teacher_designation"
        android:layout_alignStart="@+id/teacher_designation"
        android:layout_below="@+id/teacher_designation"
        android:text="Room No 321,IICT"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />

    <ImageView
        android:id="@+id/contact_teacher"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@android:drawable/sym_action_call"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/teacher_room"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>