<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/relativeLayout">

    <TextView
        android:id="@+id/teacher_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_light_green"
        android:gravity="center"
        android:text="M"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Muhammed Zafar Iqbal"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/teacher_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teacher_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/teacher_icon"
        app:layout_constraintTop_toBottomOf="@+id/teacher_name"
        tools:layout_editor_absoluteX="58dp" />

    <TextView
        android:id="@+id/teacher_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Room No 321,IICT"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/teacher_icon"
        app:layout_constraintTop_toBottomOf="@+id/teacher_designation" />

    <ImageView
        android:id="@+id/contact_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        app:srcCompat="@drawable/more_vert_black"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/teacher_room" />


</android.support.constraint.ConstraintLayout>