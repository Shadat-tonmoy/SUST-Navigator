<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shadattonmoy.navigationdrawer.DeptFragment">


    <TextView
        android:id="@+id/holiday_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Holidays of 2017" />

        <ListView
            android:id="@+id/holiday_list"
            android:layout_below="@id/holiday_title"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/holiday_loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/no_holiday_found_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e74c3c"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="TextView" />

</RelativeLayout>
