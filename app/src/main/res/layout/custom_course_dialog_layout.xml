<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/aimated_city_bg"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/black_rectangle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fill the form to add a custom course"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/textWhite"
                android:padding="10dp"
                android:textSize="16sp"/>
        </RelativeLayout>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">


            <EditText
                android:id="@+id/custom_course_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:ems="10"
                android:background="@drawable/edit_text_bg"
                android:drawableLeft="@drawable/edit_black"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:hint="Course Code"
                android:textColorHint="@color/textAsh"
                />

            <EditText
                android:id="@+id/custom_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:ems="10"
                android:background="@drawable/edit_text_bg"
                android:drawableLeft="@drawable/edit_black"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:layout_below="@id/custom_course_code"
                android:hint="Course Title"
                android:textColorHint="@color/textAsh"/>

            <EditText
                android:id="@+id/custom_course_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:ems="10"
                android:background="@drawable/edit_text_bg"
                android:drawableLeft="@drawable/edit_black"
                android:drawablePadding="10dp"
                android:layout_below="@id/custom_course_title"
                android:inputType="numberDecimal"
                android:hint="Course Credit"
                android:textColorHint="@color/textAsh"/>

            <Button
                android:id="@+id/custom_course_submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Custom Course"
                android:background="@color/colorPrimary"
                android:layout_margin="16dp"
                android:layout_below="@id/custom_course_credit"
                android:textColor="#ffffff"/>
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>



