<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="shadattonmoy.navigationdrawer.HolidayManageFragment">

    <TextView
        android:id="@+id/mange_holiday_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:layout_margin="10dp"
        android:text="TextView" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/holiday_manage_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add_black_24dp"
        app:rippleColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <ListView
        android:id="@+id/holiday_manage_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/mange_holiday_header"
        android:layout_alignStart="@+id/mange_holiday_header"
        android:layout_below="@+id/mange_holiday_header" />

    <ProgressBar
        android:id="@+id/holiday_manage_loading"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
