<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/holiday_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="CSE133"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/holiday_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holiday_name"
        android:layout_alignStart="@+id/holiday_name"
        android:layout_below="@+id/holiday_name"
        android:text="Structured Programming Language"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/holiday_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/holiday_desc"
        android:layout_alignStart="@+id/holiday_desc"
        android:layout_below="@+id/holiday_desc"
        android:text="3.00 Credit"
        android:textColor="#7f8c8d"
        android:textSize="12sp"
        />
    <Spinner
        android:id="@+id/cgpa_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:padding="0dp"
        android:layout_above="@+id/holiday_days"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/holiday_name" />

    <ImageView
        android:id="@+id/more_option_cgpa"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/more"
        android:layout_alignBottom="@+id/cgpa_list"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="20dp"
        />






</RelativeLayout>