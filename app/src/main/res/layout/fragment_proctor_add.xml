<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="shadattonmoy.navigationdrawer.TeacherEditFragment">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/add_icon" />


        <TextView
            android:id="@+id/add_proctor_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="#009688"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView3"
            android:text="Fill the following form to add proctorial body member" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_proctor_header"
            android:text="Name : "
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#009688"/>

        <EditText
            android:id="@+id/proctor_add_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView38"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Name"/>

        <TextView
            android:id="@+id/textView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/proctor_add_name_field"
            android:text="Designation : "
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#009688"/>

        <Spinner           android:id="@+id/proctor_add_designation_field"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView39"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"/>



        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/proctor_add_designation_field"
            android:text="Contact No : "
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#009688"/>


        <EditText
            android:id="@+id/proctor_add_contact_no_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView41"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="phone"
            android:hint="Enter Contact No"/>


        <TextView
            android:id="@+id/textView42"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/proctor_add_contact_no_field"
            android:text="Room Number : "
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#009688"/>

        <EditText
            android:id="@+id/proctor_add_room_no_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView42"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Enter Faculty Room No"/>

        <Button
            android:id="@+id/proctor_add_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:textColor="#ffffff"
            android:text="Submit"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/proctor_add_room_no_field"
            />
    </RelativeLayout>


</ScrollView>