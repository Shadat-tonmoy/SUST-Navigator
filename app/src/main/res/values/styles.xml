<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textRed</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="faculty_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="dept_code_ls">
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/round_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>
    <style name="dept_code_ps">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/round_red</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="dept_code_ss">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">25dp</item>
    </style>


    <style name="dept_code">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dept_title_ss">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">25dp</item>
    </style>

    <style name="dept_code_bs">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/round_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="dept_code_ams">
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/round_black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="dept_title">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">#7f8c8d</item>

        <item name="android:layout_marginTop">30sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="homeScreenText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">2dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/darkTeel</item>
    </style>


    <style name="camera_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/darkTeel</item>
    </style>


    <style name="bottomSheetHeader">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">15dp</item>

        <item name="android:textColor">@color/textWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
